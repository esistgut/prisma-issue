datasource db {
  url      = "file:data.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}


model Service {
  description     String?
  id              Int       @default(autoincrement()) @id
  owner           User      @relation("ownerServices")
  sourceService   Service?  @relation("services")
  targetServices  Service[] @relation("services")

  @@index([owner])
  @@index([sourceService])
}

model User {
  email              String      @default("") @unique
  id                 Int         @default(autoincrement()) @id
  name               String      @default("")
}
